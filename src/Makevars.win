CXX_STD = CXX17

RWINLIB = ../windows/baselibs-3.5.0

PKG_CPPFLAGS = -Ilib -I${RWINLIB}/include \
	-DSTRICT_R_HEADERS \
	-DBOOST_NO_AUTO_PTR

PKG_LIBS = -L${RWINLIB}/lib${R_ARCH} -lpng -lz -lWs2_32 -lwsock32

all: clean winlibs

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R" ${VERSION}

clean:
	rm -f $(OBJECTS)