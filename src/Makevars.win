CXX_STD = CXX17

RWINLIB = ../windows/harfbuzz-2.7.4

PKG_CPPFLAGS = -Ilib -I${RWINLIB}/include \
	-DBOOST_NO_AUTO_PTR \
	-DFMT_HEADER_ONLY

PKG_LIBS = -L${RWINLIB}/lib${R_ARCH}${CRT} -lpng -lz -lWs2_32 -lwsock32

all: winlibs

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R" ${VERSION}

clean:
	rm -f $(OBJECTS)
